<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find wheelchair_robot)/description/inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- It's standard in ros to callthe first link "base_link" -->
    <!-- For differential driver robot, it's position should be between the rotation wheels because makes the calculation easier (insted of the center of the chassis) -->
    
    <!-- BASE LINK -->
    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <!-- Then, there is the chassis that is linked via a joint to the base_link -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <!-- Often, the chassis is set a little bit behind the centre of the base_link -->
        <origin xyz="-0.1 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <!-- Moving half of the lenght forward and half of the height upward -->
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <!-- Moving half of the lenght forward and half of the height upward -->
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <!-- Mass specified by us. x y z, origin taken from visual tag. -->
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>


    <!-- LEFT WHEEL -->
    <!-- Usually, we link the wheels to the base_link (and not to the chassis) since easier to deal with -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <!-- By default, the wheel is placed where the base?link is. So, we need to move along y and rotate along x (rpy = roll, pitch, yaw)-->
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
        <!-- Axis of rotation -> lx wheel (so as rx wheel) spins on z axis. Then, when lx moves forward, it spins anti-clockwise (so +) looking at z when it's pointing out -->
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <!-- Mass specified by us. x y z, origin taken from visual tag (0 if not specified). -->
        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL -->
    <!-- Usually, we link the wheels to the base_link (and not to the chassis) since easier to deal with -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <!-- By default, the wheel is placed where the base_link is. So, we need to move along y and rotate along x (rpy = roll, pitch, yaw)-->
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
        <!-- Axis of rotation -> rx wheel (so as lx wheel) spins on z axis. Then, when rx moves forward, it spins clockwise (so -) looking at z when it's pointing out -->
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <!-- Mass specified by us. x y z, origin taken from visual tag (0 if not specified). -->
        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTOR WHEEL -->
    <!-- Trick to make it fixed and no friction at all when sliding -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="caster_wheel" />
        <origin xyz="0.24 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot>